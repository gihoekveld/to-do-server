{
  "compilerOptions": {
   "target": "es2016",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                
    "allowJs": true,                                   
    "outDir": "./build",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,                                              
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "types": ["node"],                               
  }
}
