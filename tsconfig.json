{
  "compilerOptions": {
   "target": "es2016",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                
    "allowJs": true,                                   
    "outDir": "./build",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                               
    "skipLibCheck": true                               
  }
}
